<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE stax SYSTEM "stax.dtd">

<stax>

  <defaultcall function="StartHere"/>

  <script>
    machine  = 'local'
    classpath = 'CLASSPATH=/usr/local/staf/testcases:{STAF/Env/CLASSPATH}'
    javacommand = 'java.exe'
    testList = [ [ 'Test1', 'STAFTestcase 5' ],
                 [ 'Test2', 'SimpleTestcase 3' ],
                 [ 'Test3', 'STAFTestcase 6' ] ]
  </script>

  <function name="StartHere">

    <iterate var="test" in="testList">

      <testcase name="test[0]">
 
        <sequence>

          <process name="test[0]">
            <location>machine</location>
            <command>javacommand</command>
            <parms>test[1]</parms>
            <env>classpath</env>
          </process>

          <if expr="RC == 0">
 
            <sequence>
              <message>
                'Success!!! - %s passed with RC=0' % test[0]
              </message>
              <tcstatus result="'pass'"/>
            </sequence>

            <else>
              <sequence>
                <message>
                  '%s failed with RC=%s, STAFResult=%s' % (test[0], RC, STAFResult)
                </message>
                <tcstatus result="'fail'">
                  '%s failed with RC=%s, STAFResult=%s' % (test[0], RC, STAFResult)
                </tcstatus> 
              </sequence>
            </else>

          </if>

        </sequence>
 
      </testcase>
 
    </iterate>

  </function>

</stax>
